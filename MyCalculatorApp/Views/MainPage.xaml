<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:vm="clr-namespace:MyCalculatorApp.ViewModels"
			 x:Class="MyCalculatorApp.Views.MainPage"
			 x:DataType="vm:MainViewModel">
    <Grid
        ColumnDefinitions="*,*,*,*"
        RowDefinitions="*,*,*,*,*,*"
        Padding="5"
        RowSpacing="5"
        ColumnSpacing="5">
        <Entry
            IsReadOnly="True"
            Grid.ColumnSpan="6"
            Text="{Binding Input}"
            HorizontalTextAlignment="End"
            FontSize="35"/>

        <Button
            Text="C"
            Grid.Row="1"
            Command="{Binding ClearCommand}"
            />
        <Grid
            Grid.Column="1"
            Grid.Row="1"
            ColumnDefinitions="*,*,*,*"
            RowDefinitions="*,*,*,*">
            
        <Button
            Text="X"
            Grid.RowSpan="4"
            Grid.ColumnSpan="4"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="5"
        />
        <Label
            Text="Y"
            TextColor="Black"
            FontAttributes="Bold"
            FontSize="20"
            Grid.Column="2"
            Grid.Row="1"
            HorizontalTextAlignment="End"
        />
        </Grid>
        <Button
            Text=")"
            Grid.Row="1"
            Grid.Column="2"
            />
        <Button
            Text="*"
            Grid.Row="1"
            Grid.Column="3"
            Command="{Binding SetOperatorCommand}"
            CommandParameter="*"
            />
        <Button
            Text="7"
            Grid.Row="2"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="7"/>
        <Button
            Text="8"
            Grid.Row="2"
            Grid.Column="1"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="8"/>
        <Button
            Text="9"
            Grid.Row="2"
            Grid.Column="2"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="9"/>
        <Button
            Text="/"
            Grid.Row="2"
            Grid.Column="3"
            Command="{Binding SetOperatorCommand}"
            CommandParameter="/"/>
        <Button
            Text="4"
            Grid.Row="3"
            Grid.Column="0"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="4"/>
        <Button
            Text="5"
            Grid.Row="3"
            Grid.Column="1"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="5"/>
        <Button
            Text="6"
            Grid.Row="3"
            Grid.Column="2"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="6"/>
        <Button
            Text="+"
            Grid.Row="3"
            Grid.Column="3"
            Command="{Binding SetOperatorCommand}"
            CommandParameter="+"/>
        <Button
            Text="1"
            Grid.Row="4"
            Grid.Column="0"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="1"/>
        <Button
            Text="2"
            Grid.Row="4"
            Grid.Column="1"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="2"/>
        <Button
            Text="3"
            Grid.Row="4"
            Grid.Column="2"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="3"/>
        <Button
            Text="-"
            Grid.Row="4"
            Grid.Column="4"
            Command="{Binding SetOperatorCommand}"
            CommandParameter="-"/>
        <Button
            Text="0"
            Grid.ColumnSpan="2"
            Grid.Row="5"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="0"/>
        <Button
            Text="."
            Grid.Column="2"
            Grid.Row="5"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="."/>
        <Button
            Text="="
            Grid.Column="3"
            Grid.Row="5"
            Command="{Binding SetOperatorCommand}"
            CommandParameter="="/>

    </Grid>

</ContentPage>
